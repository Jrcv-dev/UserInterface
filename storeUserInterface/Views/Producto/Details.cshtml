@model storeUserInterface.Models.Producto

@{
    ViewBag.Title = "Details";
}

<h4>Detalles</h4>

<div>
    <hr />

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Html.DisplayFor(model => model.image)" />
            </div>
            <div class="col-md-6">
                <h2 class="name">@Html.DisplayFor(model => model.Name)</h2><br />
                <p class="description">Descripción: @Html.DisplayFor(model => model.description)</p><br />
                <label class="price">Precio: $@Html.DisplayFor(model => model.price)</label>
            </div>
        </div>
    </div>

    <hr />


</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |*@
    <a href="~/Producto/Todos/@Session["idPage"]">Regresar</a>
</p>

<style>
    .name {
        font-size: 36px;
    }

    .description {
        font-size: 16px;
        font-weight: bold;
    }

    .price {
        font-size: 24px;
        color: forestgreen;
    }
</style>
