@model Tuple<List<storeUserInterface.Models.Producto>, int>
@*@model IEnumerable<storeUserInterface.Models.Producto>*@

<div class="container">
    <div class="row">
        @foreach (var item in Model.Item1)
        {
            <a href="~/Producto/Details/@item.IdProduct">
                <div class="col-md-3 h-50">
                    <label>@item.Name</label>
                    <div>
                        <img src="@item.image" />
                        <!--https://placeimg.com/100/100/tech -->
                    </div>
                </div>
            </a>

        }
    </div>
    <hr />
    <!--Paginación-->
    <div class="container text-center">
        <div class="row text-center">
            @for (int i = 1; i <= Model.Item2; i++)
            {
            <div class="col-sm-1 text-center">
                @Html.ActionLink("asd", "Todos", new { id = i })
                <!--<a class="btn btn-primary">@i</a>-->
            </div>
            }
        </div>
    </div>
    
    

</div>



<style>
    a > div {
        /*border: 1px solid blue;*/
        padding: 20px;
    }

        a > div:hover {
            background: #f2f2f2;
        }


    div > img {
        height: 100px;
        /*height: 50px;*/
    }
</style>

