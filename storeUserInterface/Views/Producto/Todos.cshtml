@model Tuple<List<storeUserInterface.Models.Producto>, int>
@*@model IEnumerable<storeUserInterface.Models.Producto>*@

<nav class="navbar navbar-light bg-light justify-content-center">
    <a class="navbar-brand">SofttekStore</a>
    <form class="form-inline">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>

        <ul>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Dropdown link
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="#">Logout</a>
                    <a class="dropdown-item" href="#">Cambiar contraseña</a>
                </div>
            </li>
        </ul>

    </form>
</nav>


<div class="container">
    <div class="row">
        @foreach (var item in Model.Item1)
        {
            <a href="~/Producto/Details/@item.IdProduct">
                <div class="col-md-3 h-50">
                    <label>@item.Name</label>
                    <div>
                        <img src="@item.image" />
                        <!--https://placeimg.com/100/100/tech -->
                    </div>
                </div>
            </a>

        }
    </div>
    <hr />
    <!--Paginación-->
    <div class="container text-center">
        <div class="row text-center">
            @for (int i = 1; i <= Model.Item2; i++)
            {
            <div class="col-sm-1 text-center">
                @Html.ActionLink("Página "+@i, "Todos", new { id = i })
                <!--<a class="btn btn-primary">@i</a>-->
            </div>
            }
        </div>
    </div>
    
    

</div>



<style>
    a > div {
        /*border: 1px solid blue;*/
        padding: 20px;
    }

        a > div:hover {
            background: #f2f2f2;
        }


    div > img {
        height: 100px;
        /*height: 50px;*/
    }
</style>

