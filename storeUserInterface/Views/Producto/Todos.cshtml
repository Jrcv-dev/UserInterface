<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" >SofttekStore</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Options <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        @if (Session["rol"].ToString().Equals("INT"))
                        {
                            <li><a>@Html.ActionLink("Agregar Nuevo Producto", "Create")</a></li>
                            <li>@Html.ActionLink("Cambiar Contraseña", "RedireccionarACambiarPass")</li>
                            <li>@Html.ActionLink("Logout", "Logout")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Cambiar Contraseña", "RedireccionarACambiarPass")</li>
                            <li>@Html.ActionLink("Logout", "Logout")</li>
                        }
                    </ul>
                </li>
            </ul>
            <form class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
            <ul class="nav navbar-nav navbar-right">
                <li><a>Hello @Session["username"]</a></li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>


<div class="container">
    <div class="row">
        @foreach (var item in Model.Item1)
        {
            <a href="~/Producto/Details/@item.IdProduct">
                <div class="col-md-3 h-50">
                    <label>@item.Name</label>
                    <div>
                        <img src="@item.image" />
                        <!--https://placeimg.com/100/100/tech -->
                    </div>
                </div>
            </a>

        }
    </div>
    <hr />
    <!--Paginación-->
    <div class="container text-center">
        <div class="row text-center">
            @for (int i = 1; i <= Model.Item2; i++)
            {
            <div class="col-sm-1 text-center">
                @Html.ActionLink("Página "+@i, "Todos", new { id = i })
                <!--<a class="btn btn-primary">@i</a>-->
            </div>
            }
        </div>
    </div>
    
    

</div>



